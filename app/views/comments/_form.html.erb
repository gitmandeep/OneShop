<%= bootstrap_form_with(model: [@product, @comment], remote: true) do |form| %>
  <%= render 'comments/comment_error' %> 
  <%= form.text_area :your_comment, rows: 1, cols:50, class: 'fc' %>
  
  <%= form.text_field :comment_by, :value => current_user.email, :readonly => true %>
  
  <%= form.submit class: "btn btn-primary btn-xm" %>
      
<% end %>
