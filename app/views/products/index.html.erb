<% @products.each do |product| %>
  <div class="col-xs-4 min-hg product-id-<%= product.id  %>" style="width: 150px, height: 250px">
    <div id="myCarousel<%= product.id %>" class="carousel slide" data-ride="carousel" style="height: 300px" >
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
      <div class="item active" >
        <%= image_tag(product.pictures[0], {:style => "height:300px;"})%>
      </div>

      <% product.pictures.drop(1).each do |picture| %>
        <div class="item" >
          <%= image_tag(picture, {:style => "height:300px;"})%>
        </div>
      <% end %>
    </div>

    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-target="#myCarousel<%= product.id %>" data-slide="prev">
      <span class="glyphicon glyphicon-chevron-left"></span>
      <span  class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-target="#myCarousel<%= product.id %>" data-slide="next">
      <span class="glyphicon glyphicon-chevron-right"></span>
      <span  class="sr-only">Next</span>
    </a>
  </div>
    <div class="product_name">
      <h4><%= product.name %></h4>
    </div>    
    <div class="price_line">
      <h4 class="price"> â‚¹ <%=product.price%></h4>
    </div>
    <div>
      <%= product.category && product.category.name %>
    </div>
    <%= link_to 'Edit', edit_product_path(product) %> | <%= link_to 'Show More', product_path(product), class: "btn btn-link" %>| <%= link_to 'Destroy', product, method: :delete, remote: true, data: { confirm:'Are you sure?' } %> 
  </div>
<%end%>

<% if @products.blank? %>
  <h4 class="text-danger">There are no products containing the term <%= params[:search] %>.</h4>
<% end %>

