<div class = "col-sm-4">
  <%= form_tag charges_path do %>
    <article>
      <% if flash[:error].present? %>
        <div id="error_explanation">
          <p><%= flash[:error] %></p>
        </div>
      <% end %>
      <label class="amount">
        <span>Amount: <%= total_amount %> </span>
      </label>
    </article>
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
            data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
            data-description="A month's subscription"
            data-amount= "<%= total_amount %>"
            data-locale="auto">
    </script>  
  <% end %>
</div>
<div class="row">
  <% @cards.each do |card| %>
    <div class="col-sm-4" style="width:300px;background-color: powderblue; height: 100px; " >
      <div class="card card-plain">
        <div class="card-header card-header-image">
          <div class="card-body ">
            <h3>Card Number :- xxxxxxx-<%= card.last4 %></h3>
            <h3>Card Exp :- <%= card.exp_month %>/<%= card.exp_year %></h3>
            <button onclick="myFunction()">Select</button>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>

